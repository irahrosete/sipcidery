
<div class="col-md-6 offset-md-3 col-sm-4 offset-sm-4">
  <%= simple_form_for(@drink) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :brewer %>
      <%= f.input :price %>
      <%= f.input :available %>
      <%= f.input :quantity %>
    </div>

    <div class="form-actions">
      <%= link_to "Cancel", drinks_path, class: "btn btn-outline-dark btn-default-inverse" %>
      <%= f.button :submit, class: "btn btn-outline-dark btn-default-inverse" %>
    </div>
  <% end %>
</div>

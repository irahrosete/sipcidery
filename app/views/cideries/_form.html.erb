<div class="col-md-6 offset-md-3 col-sm-4 offset-sm-4">
  <%= simple_form_for(@cidery) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :origin %>
      <%= f.input :email %>
    </div>

    <div class="field">
      <%= f.label :logo %>
      <%= f.file_field :logo, accept: 'image/png, image/jpg, image/jpeg' %>
    </div>

    <div class="form-actions">
      <%= link_to "Cancel", @cidery, class: "btn btn-outline-dark btn-default-inverse" %>
      <%= f.button :submit, class: "btn btn-outline-dark btn-default-inverse" %>
    </div>
  <% end %>
</div>